<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/notification_thumbnail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_weight="0.33">

    </ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.66"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notification_song_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center"/>
        <TextView
            android:id="@+id/notification_song_artist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/notification_prev"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.33"
                android:src="@drawable/prev"/>
            <ImageView
                android:id="@+id/notification_play_pause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.33"
                android:src="@drawable/play"/>
            <ImageView
                android:id="@+id/notification_next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.33"
                android:src="@drawable/next"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="20sp"
            android:id="@+id/notification_cancel"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>


